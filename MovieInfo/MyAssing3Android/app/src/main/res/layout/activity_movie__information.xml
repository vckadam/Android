<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.asu.msse.vckadam.myassing3android.Movie_Information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title : "
        android:id="@+id/titleLabel"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Godfather"
        android:id="@+id/titleValue"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/titleLabel"
        android:layout_toRightOf="@+id/titleLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1972"
        android:textSize="15sp"
        android:id="@+id/yearValue"
        android:layout_toRightOf="@+id/yearLabel"
        android:layout_alignBaseline="@+id/yearLabel"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year : "
        android:id="@+id/yearLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/titleLabel"
        android:layout_alignLeft ="@+id/titleLabel"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Released : "
        android:id="@+id/releasedLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/yearLabel"
        android:layout_alignLeft ="@+id/titleLabel"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="17th Feb 1972"
        android:id="@+id/releasedValue"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/releasedLabel"
        android:layout_alignBaseline="@+id/releasedLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Genre : "
        android:id="@+id/genreLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/releasedLabel"
        android:layout_alignLeft ="@+id/titleLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Action"
        android:id="@+id/genreValue"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/genreLabel"
        android:layout_alignBaseline="@+id/genreLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="rated : "
        android:id="@+id/ratedLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/genreLabel"
        android:layout_alignLeft ="@+id/titleLabel"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="top"
        android:id="@+id/ratedValue"
        android:textSize="15sp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/ratedLabel"
        android:layout_alignBaseline="@+id/ratedLabel"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Runtime : "
        android:id="@+id/runtimeLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/ratedLabel"
        android:layout_alignLeft ="@+id/titleLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2hrs 30min"
        android:id="@+id/runtimeValue"
        android:textSize="15sp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/runtimeLabel"
        android:layout_alignBaseline="@+id/runtimeLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actors : "
        android:id="@+id/actorsLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/runtimeLabel"
        android:layout_alignLeft ="@+id/titleLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Michael"
        android:id="@+id/actorsValue"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/actorsLabel"
        android:layout_alignBaseline="@+id/actorsLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Plot : "
        android:id="@+id/plotLabel"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below= "@+id/actorsLabel"
        android:layout_alignLeft ="@+id/titleLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="this is the plot"
        android:id="@+id/plotValue"
        android:textSize="15sp"
        android:layout_alignTop="@+id/plotLabel"
        android:layout_alignLeft="@+id/actorsValue"
        android:layout_alignStart="@+id/actorsValue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Media"
        android:id="@+id/button"
        android:layout_below="@+id/plotValue"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</ScrollView>